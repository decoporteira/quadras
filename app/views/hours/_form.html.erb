<%= form_with(model: hour) do |form| %>
  <% if hour.errors.any? %>
    <div style="color: red">
     <h4> <%= I18n.t("hour.errors.messages.not_saved", :count => hour.errors.count)%>

      <ul>
        <% hour.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :hour, style: "display: block" %>
    <%= form.select :hour, options_for_select(Hour.hours.map {|key, value| [key.titleize, Hour.hours.key(value)]}, @hour.hour) %> 
    
  </div>

  <div class="form-group">
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, options_for_select(Hour.statuses.map {|key, value| [key.titleize, Hour.statuses.key(value)]}, @hour.status) %> 
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary">
        <span class="icon text-white-50">
          <i class="fas fa-flag"></i>
        </span>
        <span class="text">Confirmar</span>
      </button>
  </div>
<% end %>
