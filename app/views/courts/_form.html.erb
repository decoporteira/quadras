<%= form_with(model: court, local: true) do |form| %>
  <% if @court.errors.any? %>
    <div id="error_explanation">
      <h4> <%= I18n.t("court.errors.messages.not_saved", :count => court.errors.count)%>

      <ul>
      <% court.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :court_type %>
    <%= form.collection_select :court_type_id, CourtType.all, :id, :name, {:prompt => "Selecione...", :selected => [@court.court_type_id]}, {}%>
  </div>
  <div class="form-group">
   
    <%= form.label :status %>
    <%= form.select :status, options_for_select(Court.statuses.map {|key, value| [key.titleize, Court.statuses.key(value)]}, @court.status) %>
  </div>
  

  <div class="form-group">
    <button type="submit" class="btn btn-primary">
        <span class="icon text-white-50">
          <i class="fas fa-flag"></i>
        </span>
        <span class="text">Confirmar</span>
      </button>
     
  </div>
<% end %>
<%= params.inspect %>
