<p id="notice"><%= notice %></p>

<h1><%= (Court.model_name.human(count: @courts.count)).capitalize  %></h1>

<table>
  <thead>
    <tr>
      <th><%= @courts.human_attribute_name(:name) %></th>
          
        
      <th><%= @courts.human_attribute_name(:status) %></th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courts.each do |court| %>
      <tr>
        <td><%= court.name %></td>
        <td><%= court.status %></td>
        
        <td><%= link_to t('links.show'), court %></td>
        <td><%= link_to t('links.edit'), edit_court_path(court) %></td>
        <td><%= link_to t('links.destroy'), court, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
    
  </tbody>
</table>

<br>

<%= link_to t('new.court'), new_court_path %>
