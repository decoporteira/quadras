
<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Quadras para Aluguel - dia <%= I18n.l(@date.to_date) %></h1>
</div>




<form action="/" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
  <input type="date" name="date" />
  <input type="submit" />
</form><br/>





<div class="row">

                        <!-- Earnings (Monthly) Card Example -->
                      
<% @courts.each do |court|%>

<div class="col-xl-3 col-md-6 mb-4">








<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><%= court.name %> - <%= I18n.l(@date.to_date) %></h6>
        <div class="dropdown no-arrow">
           
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Hora</th>
                            <th>Status</th>
                            <th>Nome</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Hora</th>
                            <th>Status</th>
                            <th>Nome</th>

                        </tr>
                    </tfoot>
                    <tbody>
                        <%# @hours.each do |hour| %>

                        <tr>
                            <th scope="row"><%#= hour.hour %></th>

                            <%# schedulers_in_court_and_hour = @schedulers.where(court_id: court.id, hour_id: hour.id, date: @date) %>
                            <%# if schedulers_in_court_and_hour.any? %>
                            <td>Reservada</td>
                            <td><%#= schedulers_in_court_and_hour.first.client.name %></td>
                            <%#else%>
                            <td class="bg-primary text-white ">Dispon√≠vel</td>
                            <td class="bg-primary text-white ">
                                <%#= link_to new_scheduler_path, class:"btn btn-success btn-circle btn-sm" do %>
                                <i class="fa fa-plus"></i>
                                <%# end %></td>

                            <%#end%>
                        </tr>
                        <%# end %>
            </div>
            </tbody>
            </table>
            
        </div>
        
    </div>
   </div> 
</div></div>
<% end%>

</div>